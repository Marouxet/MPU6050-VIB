#:kivy 1.1.1
<Inicio>:
    
    graph_ac1: graph_ac1
    graph_ac2: graph_ac2
    boton_on_libre: boton_on_libre
    resetear : resetear
    exportar: exportar
    corregir: corregir
    boton_conectar : boton_conectar
    texto_usuario: texto_usuario


    BoxLayout:

        
        orientation: "horizontal"
        size: root.width, root.height

        BoxLayout:
            orientation: "vertical"
            size_hint: (0.7, 0.9)
            pos_hint:{"center":0,"center_y":0.5}

            Graph:
                id: graph_ac1
                xlabel: "Tiempo [s]"
                ylabel: "Aceleración [g]"
                border_color:1,1,1,0.95
                label_options: {'color': (1,1,1,1)}
                xmin: 0
                xmax: root.t_max
                ymin:-0.5
                ymax: 0.5
                padding:10
                x_grid:True
                x_grid_label : True
                y_grid:True
                y_grid_label : True
                x_ticks_minor:1
                x_ticks_major:root.t_max/10
                y_ticks_minor:1
                y_ticks_major:0.1
                tick_color: 1,1,1,0.5
                
            Graph:
                id: graph_ac2
                xlabel: "Tiempo [s]"
                ylabel: "Aceleración [g]"
                border_color:1,1,1,0.95
                label_options: {'color': (1,1,1,1)}
                xmin: 0
                xmax: root.t_max
                ymin:-0.5
                ymax: 0.5
                padding:10
                x_grid:True
                x_grid_label : True
                y_grid:True
                y_grid_label : True
                x_ticks_minor:1
                x_ticks_major:root.t_max/10
                y_ticks_minor:1
                y_ticks_major:0.1
                tick_color: 1,1,1,0.5

        BoxLayout:
            size_hint: (0.05, 0.8)

        BoxLayout:
            orientation: "vertical"   
            size_hint: (0.15, 0.8)
            pos_hint:{"center":0,"center_y":0.5}
            border: (0,0,0,0.5)

            Label:
                id: texto_usuario
                text: ""
                font_size:'14sp'
                

            Button:
                id: boton_conectar
                text: "Conectar"
                on_press: root.conectar()

            Button: 
                id: boton_on_libre
                text: "Medir"
                on_press: root.pressedLibre()
                disabled: True

            Button: 
                id: corregir
                text: "Corregir Gráfico"
                on_press: root.cambiarOrdenBits()
                disabled: True

            Button: 
                id: resetear
                text: "Ajustar offset "
                on_press: root.resetearWF()
                disabled: True
            Button: 
                id: exportar
                text: "Exportar Ahora"
                on_press: root.exportCSV() 
                disabled: True

            
                
                
